<div class="row">
    <h1>Registration Numbers</h1>

    <div class="message"></div>

    <div class="numbers"></div>

    {{#if message}}
    <div class="">{{message}}</div>
    {{else}}
    <div class="">
        <p class='flash'> {{messages.error}}</p>
    </div>
    {{/if}}

    <div class="textboxName">
        <form action="reg_numbers" method="POST">
            <strong>Registration Number: </strong>
            <input type="text" name="regNumber" class="regNum" placeholder="eg: CAA 123-321">

            <button type="submit" class="add">Add</button>
        </form>
    </div>

    <br>

    <div class="filter">
        <form action="filter" method="POST">
            <strong>Filter by towns: </strong>
            <input type="radio" name="town" value="Select All">Select All
            <input type="radio" name="town" value="CA">Cape Town
            <input type="radio" name="town" value="CJ">Paarl
            <input type="radio" name="town" value="CY">Bellville

            <button type="submit" class="Show">Show</button>
        </form>
    </div>

    <hr>

    <br>

    <div class="">
        {{#each numbers}}
        <ul class="reg">
            {{this.reg}}
        </ul>
        {{/each}}
    </div>

    <br>
    <br>

    <div>
        <form action="/reset" method="GET">
            <a href="/reset"></a>
            <button type="submit" class="reset">Reset</button>
        </form>
    </div>

</div>