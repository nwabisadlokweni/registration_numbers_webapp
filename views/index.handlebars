<div class="row">
    <h1><strong>Registration Numbers</strong></h1>

    <div class="message"></div>

    <div class="numbers"></div>

    {{#if message}}
    <div class="">{{message}}</div>
    {{else}}
    <div class="">
        <p class='flash'> {{messages.error}}</p>
    </div>
    {{/if}}

    <div class="resetSucceded"></div>

    <div class="clear">
        <p class="clear"></p>{{messages.resetSucceded}}</p>
    </div>

    <div class="textboxName">
        <p>CY 123 456 CA 325-695 CJ 1235</p>
        <form action="reg_numbers" method="POST">
            <strong>Registration Number: </strong>
            <input type="text" name="regNumber" class="regNum" placeholder="enter registration number">

            <button type="submit" class="add">Add</button>
        </form>
    </div>

    <br>

    <div class="filter">
        <form action="filter" method="POST">
            <strong>Filter by towns: </strong>
            <input type="radio" name="town" value="Select All">Select All
            <input type="radio" name="town" value="CA">Cape Town
            <input type="radio" name="town" value="CJ">Paarl
            <input type="radio" name="town" value="CY">Bellville

            <button type="submit" class="Show">Show</button>
        </form>
    </div>

    <br>

    <div>
        <form action="/reset" method="GET">
            <a href="/reset"></a>
            <button type="submit" class="reset">Reset</button>
        </form>
    </div>

    <hr>

    <div class="success"></div>

    <div class="confirm">
        <p class="confirm"></p>{{messages.success}}</p>
    </div>

    <div class="">
        {{#each numbers}}
        <ul class="reg">
            {{this.reg}}
        </ul>
        {{/each}}
    </div>
</div>

<script>
    setTimeout(function () {
        document.querySelector(".flash").innerHTML = "";
        document.querySelector(".confirm").innerHTML = "";
        document.querySelector(".clear").innerHTML = ""
    }, 3000);
</script>